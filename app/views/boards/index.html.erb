<div class="wrapper">

<h1 class="title_todo">Team Board</h1>

<table class="table_todo">
  <thead>
    <tr>
      <th>Board title</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><a class="task" href="<%= board_path(board) %>"><%= board.board_title %></a></td>
        <td><a class="topic"><%= board.topic %></a></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Remove', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="button_todo"><%= link_to 'New Topic', new_board_path %></div>

</div>
