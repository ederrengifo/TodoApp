<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_container">
    <div class="field" style="height:100%; padding: 20px 0;">
      <div class="form-title">Note Title</div>
      <div class="form-input" style="margin-bottom:10px;"><%= f.text_field :noteTitle, placeholder: "Your note title here" %></div>
      <div class="form-title">Description</div>
      <div class="form-input"><%= f.text_field :noteDescription, placeholder: "Be short!" %></div>
    </div>

    <div style="clear:both"></div>
    <div class="actions">
       <%= f.submit 'Save Changes' %>
    </div>
  </div>

<% end %>
